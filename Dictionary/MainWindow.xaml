                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF8E12F1" Offset="0.525"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="CautareCuvinte" Content="2. Căutare de cuvinte" FontFamily="Times New Roman" FontSize="24" FontWeight="Bold" FontStyle="Italic"   Grid.ColumnSpan="2" Click="CautareCuvinte_Click" Cursor="Hand" Margin="255,350,261,232" Foreground="White" >
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF8E12F1" Offset="0.525"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="Divertisment" Content="3. Divertisment"  FontFamily="Times New Roman" FontSize="24" FontWeight="Bold" FontStyle="Italic" Margin="255,467,261,123" Grid.ColumnSpan="2" Click="Divertisment_Click" Cursor="Hand" Foreground="White" >
