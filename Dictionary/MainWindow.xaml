                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF8E12F1" Offset="0.525"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Label Content="Mitrofan Ioana-Denisa&#xD;&#xA;Grupa: 10LF223" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="10,556,0,0" VerticalAlignment="Top" Height="99" Width="277" FontFamily="Times New Roman" FontSize="22" FontWeight="Bold" FontStyle="Italic" Foreground="White"/>


    </Grid>
</Window>
