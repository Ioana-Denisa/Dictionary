        <Label Content="Menu" HorizontalAlignment="Left" VerticalAlignment="Top" Width="214" Height="115" Margin="288,114,0,0" FontSize="58" FontStyle="Italic" FontFamily="Times New Roman" FontWeight="Bold" Foreground="#FFFCFCFC" Grid.Column="1" HorizontalContentAlignment="Center" />
        <Button x:Name="Administrativ"   Content="1. Administrare" FontFamily="Times New Roman" FontSize="24" FontWeight="Bold" FontStyle="Italic" Margin="255,229,261,356" Grid.ColumnSpan="2" Click="Administrativ_Click_1" Cursor="Hand" Foreground="White">
